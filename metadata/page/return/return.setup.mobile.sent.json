{
  "_id": "return.setup.mobile.sent",
  "_type": "page.form",
  "body": "We have sent a 5 digit security code by text to {mobile}.\r\n\r\nThis can take a minute or so to arrive.\r\n\r\nThis runs out in 24 hours.",
  "components": [
    {
      "_id": "return.setup.mobile.sent--text.code",
      "_type": "text",
      "errors": {
        "pattern": {
          "inline": "The code should be 5 digits",
          "summary": "The code should be 5 digits"
        }
      },
      "label": "**Security code**",
      "name": "mobile_code",
      "validation": {
        "pattern": "^\\d{5}$"
      },
      "widthClassInput": "5"
    },
    {
      "_id": "return.setup.mobile.sent--content.resend",
      "_type": "content",
      "html": "[Didn't get a code?](/resend_security_code)"
    }
  ],
  "heading": "Enter security code",
  "nextPage": [
    {
      "condition": {
        "all": [
          {
            "identifier": "mobile_code",
            "operator": "defined"
          },
          {
            "identifier": "two_factor_authentication",
            "negated": true,
            "operator": "is",
            "value": "yes"
          }
        ]
      },
      "page": "page.unit"
    },
    {
      "condition": {
        "identifier": "mobile_code",
        "operator": "defined"
      },
      "page": "page.new_record"
    }
  ],
  "url": "validate"
}